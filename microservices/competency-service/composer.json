{
    "name": "lms/competency-service",
    "description": "Competency management microservice for LMS",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ramsey/uuid": "^4.7",
        "symfony/http-foundation": "^7.0",
        "symfony/routing": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/config": "^7.0",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "CompetencyService\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CompetencyService\\Tests\\": "src/Tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit --testsuite=unit",
        "test-integration": "phpunit --testsuite=integration",
        "test-coverage": "phpunit --coverage-html coverage"
    }
} 