{
  "name": "lms-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for LMS microservices",
  "scripts": {
    "test": "mocha --timeout 30000 --exit *.test.js",
    "test:watch": "mocha --watch --timeout 30000 *.test.js",
    "test:ci": "mocha --timeout 30000 --exit --reporter json *.test.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chai": "^4.3.10",
    "mocha": "^10.2.0"
  },
  "devDependencies": {
    "dotenv": "^16.3.1"
  }
} 